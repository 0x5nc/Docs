    services.AddTransient&lt;IEmailSender, AuthMessageSender&gt;();
    services.AddTransient&lt;ISmsSender, AuthMessageSender&gt;();
    services.Configure&lt;SMSoptions&gt;(Configuration);
}
</code></pre><h3 id="enable-two-factor-authentication" sourcefile="security/authentication/2fa.md" sourcestartlinenumber="91" sourceendlinenumber="91">Enable two-factor authentication</h3>
